#!/bin/bash

set -eo pipefail

temp=$(mktemp /tmp/provisioning-manifest-<%= manifest.uuid %>.XXXXXXXX)

rmtemp() {
  rm "$temp"
}

main() {
  if ! hash provision 2> /dev/null; then
    gem install provisioning
  fi

  curl -s "<%= manifest_url(protocol: :https, format: :json) %>" > "$temp"

  provision "$temp"
}

trap rmtemp EXIT

main
